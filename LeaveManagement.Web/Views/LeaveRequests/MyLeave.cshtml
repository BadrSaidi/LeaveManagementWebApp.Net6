@model EmployeeLeaveRequestViewVM

@{
	ViewData["Title"] = "My Leave";
}

<div class="card">
	<div class="card-header">
		<h2>Leave Allocations</h2>
	</div>
	<ul class="list-group list-group-flush">
		<li class="list-group-item">
			<div class="row">
				<div class="col">
					<h6>Leave Name</h6>
				</div>
				<div class="col">
					<h6>Original Allocation</h6>
				</div>
				<div class="col">
					<h6>Current Allocation</h6>
				</div>
			</div>
		</li>
		@foreach (var allocation in Model.LeaveAllocations)
		{
			<li class="list-group-item">
				<div class="row">
					<div class="col">
						<h6>@allocation.LeaveType.Name Leave</h6>
					</div>
					<div class="col">
						@allocation.LeaveType.DefaultDays
					</div>
					<div class="col">
						@allocation.NumberOfDays
					</div>
				</div>
			</li>
		}
	</ul>
</div>
<hr />
<h2>Current Requests</h2>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.LeaveRequests[0].StartDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LeaveRequests[0].EndDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LeaveRequests[0].LeaveType)
			</th>
			@if (Model.LeaveRequests[0].Cancelled)
			{
				<th>
					@Html.DisplayNameFor(model => model.LeaveRequests[0].Cancelled)
				</th>
			}
			else{
			<th>
				@Html.DisplayNameFor(model => model.LeaveRequests[0].Approved)
			</th>
			}
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.LeaveRequests)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.StartDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EndDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LeaveType.Name)
				</td>
				<td>
					@if(item.Cancelled){
						<span class="badge bg-secondary">Cancelled</span>
					}
					else if(item.Approved == null){
						<span class="badge bg-warning">Pending</span>
					}
					else if(item.Approved.Value){
						<span class="badge bg-success">Approved</span>
					}
					else if(!item.Approved.Value){
						<span class="badge bg-danger">Rejected</span>
					}
				</td>
				<td>
					<a asp-action="Cancel" class="btn btn-danger" asp-route-id="@item.Id">Cancel Request</a> |
				</td>
			</tr>
		}
	</tbody>
</table>